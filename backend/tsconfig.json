{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node", 
      "resolveJsonModule": true, 
      "sourceMap": true,       
      "declaration": true,       
      "noUnusedLocals": true,  
      "noUnusedParameters": true 
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist"]
  }