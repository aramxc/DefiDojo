{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "..",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/src/*"]
      }
    },
    "include": [
      "./src/**/*",
      "../shared/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}